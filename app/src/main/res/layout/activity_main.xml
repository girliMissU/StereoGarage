<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_343333"
            android:gravity="bottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#523c34">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/menu_icon" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="聚力立停"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                    <LinearLayout
                        android:id="@+id/nearest_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="vertical"
                        android:clickable="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/nearest" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/nearest_icon"
                            android:text="最近车库"
                            android:textSize="12sp"
                            android:textColor="#ffffff"/>
                    </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:background="@drawable/edge_shadow_bg">

        <AutoCompleteTextView
            android:id="@+id/searchkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入目的地，为你推荐车库" />
        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bg"
            android:layout_weight="4"
            android:textColor="@color/white"
            android:text="车库推荐"/>
    </LinearLayout>


    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/search_layout"
        android:clickable="true" />

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/search_layout"
        android:clickable="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/car_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_margin="12dp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:visibility="gone">

        <TextView
            android:id="@+id/current_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/location"
            android:paddingLeft="5dp"
            android:text="东南大学"
            android:textColor="#663300"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="#663300" />

        <LinearLayout
            android:id="@+id/car_distance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_time"
                    style="@style/text_style"
                    android:text="驾车" />

                <TextView
                    android:id="@+id/car_time"
                    style="@style/text_style"
                    android:text="10分钟"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_distance"
                    style="@style/text_style"
                    android:text="距离" />

                <TextView
                    android:id="@+id/car_distance"
                    style="@style/text_style"
                    android:text="200米"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_price"
                    style="@style/text_style"
                    android:text="每小时" />

                <TextView
                    android:id="@+id/car_price"
                    style="@style/text_style"
                    android:text="5元" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_num"
                    style="@style/text_style"
                    android:text="空余车位" />

                <TextView
                    android:id="@+id/car_num"
                    style="@style/text_style"
                    android:text="10"/>

            </LinearLayout>
        </LinearLayout>



    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/book_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="预约"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/navi_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="导航"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="100dp"

        android:layout_alignParentBottom="true"
        android:layout_above="@+id/dingwei_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@mipmap/refresh_icon" />

        <ImageView
            android:id="@+id/btn_locale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_refresh"

            android:clickable="true"
            android:src="@mipmap/get_location_icon" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/dingwei_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10sp"
        android:visibility="gone">

        <TextView
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:drawableLeft="@mipmap/dingwei"
            android:padding="5dp"
            android:text="江苏省南京市玄武区东南大学四牌楼校区"
            android:lines="2"
            android:textColor="#663300"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tuijian_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:padding="10dp"
            android:text="附近车库推荐"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout>

