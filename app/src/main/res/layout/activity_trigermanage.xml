<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/trigermanage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="70sp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:onClick="trigerList">

                <TextView
                    android:id="@+id/list"
                    style="@style/text_style"
                    android:textSize="26sp"
                    android:text="触发器列表" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trigermanage_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trigermanage_layout"
        android:layout_margin="12dp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/triger_add_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:onClick="addTriger">

            <TextView
                android:id="@+id/add"
                style="@style/text_style"
                android:textSize="26sp"
                android:text="添加触发器" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trigermanage_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trigermanage_layout1"
        android:layout_margin="12dp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/call_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:onClick="gotoPeople">

            <TextView
                android:id="@+id/call"
                style="@style/text_style"
                android:textSize="26sp"
                android:text="报警联系人/组" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trigermanage_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trigermanage_layout2"
        android:layout_margin="12dp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/car_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:onClick="gotoRecord">

            <TextView
                android:id="@+id/record"
                style="@style/text_style"
                android:textSize="26sp"
                android:text="报警记录" />

        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>