<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:alpha="255"
android:background="#ffffff"
tools:context="com.stereogarage.activity.AdminloginActivity">



<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="60dp"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginTop="45dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="聚力立停"
        android:textColor="#663300"
        android:textSize="24sp" />

</LinearLayout>

<RelativeLayout
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="8dp"
    android:layout_below="@+id/ll"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/radius_drawable_bg"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/u" />

            <EditText
                android:id="@+id/login_input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:hint="账号/用户名/邮箱"
                android:singleLine="true"
                android:padding="5dp"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/edittext_cursor"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#663300" />

        <LinearLayout
            android:id="@+id/passwd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/password" />

            <EditText
                android:id="@+id/login_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:hint="密码"
                android:singleLine="true"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/edittext_cursor"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="0dp"
    android:layout_below="@+id/login_layout"
    android:gravity="center" >
    <!--记住账号和密码的勾选框-->
    <CheckBox
        android:id="@+id/remember_pwd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center_vertical"
        style="@style/CustomCheckBoxTheme"
        android:text="记住密码"
        android:textColor="#663300"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:paddingLeft="0dp"
        android:checked="false"
        />

    <!--忘记密码的按钮-->
    <Button
        android:id="@+id/forgive_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="#00000000"
        android:text="忘记密码?"
        android:textColor="#663300"
        android:textSize="16sp" />


    <!--登录按钮-->
    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remember_pwd"
        android:layout_centerInParent="true"
        android:paddingBottom="2dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="30dp"
        android:text="管理员登录"
        android:enabled="false"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:background="@drawable/text_bg"
        android:gravity="center"
        />


    <ProgressBar
        android:id="@+id/reg_req_code_gif_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remember_pwd"
        android:layout_marginTop="30dp"
        android:indeterminateDrawable="@drawable/base_loading_large_anim"
        android:indeterminateBehavior="repeat"
        android:gravity="center"
        android:visibility="gone"/>


</RelativeLayout>
</RelativeLayout>

