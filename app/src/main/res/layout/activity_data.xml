<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/book_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_margin="12dp"
        android:background="@drawable/edge_shadow_bg"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_user"
                    style="@style/text_style"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/user"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>


        </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="#663300" />

    <LinearLayout
        android:id="@+id/car_distance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_num"
                style="@style/text_style"
                android:text="车牌号" />

            <TextView
                android:id="@+id/num"
                style="@style/text_style"
                android:text="TextView"
                android:textColor="@color/color_393939" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_order"
                style="@style/text_style"
                android:text="订单号" />

            <TextView
                android:id="@+id/order"
                style="@style/text_style"
                android:text="TextView"
                android:textColor="@color/color_393939" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_garage"
                style="@style/text_style"
                android:text="车库号" />

            <TextView
                android:id="@+id/garage"
                style="@style/text_style"
                android:text="TextView"
                android:textColor="@color/color_393939" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/car_distance_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_place"
                    style="@style/text_style"
                    android:text="车位号" />

                <TextView
                    android:id="@+id/place"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_confirm"
                    style="@style/text_style"
                    android:text="是否确认停车" />

                <TextView
                    android:id="@+id/confirm"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_confirmparking"
                    style="@style/text_style"
                    android:text="confirm_parking" />

                <TextView
                    android:id="@+id/confirmparking"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/car_distance_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_ortime"
                    style="@style/text_style"
                    android:text="预约时间" />

                <TextView
                    android:id="@+id/ortime"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_sttime"
                    style="@style/text_style"
                    android:text="订单开始时间" />

                <TextView
                    android:id="@+id/sttime"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_entime"
                    style="@style/text_style"
                    android:text="订单结束时间" />

                <TextView
                    android:id="@+id/entime"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/car_distance_layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_total"
                    style="@style/text_style"
                    android:text="总金额" />

                <TextView
                    android:id="@+id/total"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_status"
                    style="@style/text_style"
                    android:text="支付状态" />

                <TextView
                    android:id="@+id/status"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_if"
                    style="@style/text_style"
                    android:text="是否已离开" />

                <TextView
                    android:id="@+id/iff"
                    style="@style/text_style"
                    android:text="TextView"
                    android:textColor="@color/color_393939" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/cancel_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    </RelativeLayout>